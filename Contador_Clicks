<html>
    <head>
        <title>Contador de clicks</title>
        <script>
        var i = 0
        function clickLink() {
            i++;
            if (i == 1) {
                document.getElementById("clicks").innerHTML = i; 
            }
            else
            {
                document.getElementById("clicks").innerHTML = i;
            }
        }
        function Reset() {
            i = 0;
            document.getElementById("clicks").innerHTML = i;
        }
        </script>
    </head>
    <body>
        <a href="javascript:clickLink();">Click aqu√≠</a>
        <p>Clicks <span id="clicks">0</span></p>
        <a href="javascript:Reset();">Reset</a>
    </body>
</html>
